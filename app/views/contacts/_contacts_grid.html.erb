<%= form_tag({controller: "contacts", action: "destroy_selected"}, method: "delete") do %>
  <%= submit_tag 'Delete', class: "btn btn-danger", 
    data: { confirm: "Are you sure you wish to delete the selected contact(s)?\n"\
      "Any appointments associated with the contact(s) will also be deleted."} %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Select</th>
        <th>Name</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= check_box_tag("selected_contact_id_#{contact.id}") %></td>
          <td><%= contact.name %></td>
          <td><%= contact.phone_number %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
