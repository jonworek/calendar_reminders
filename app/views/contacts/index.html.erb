<h1>Contacts</h1>
<%= link_to 'New Contact', new_contact_path, class: "pull-right btn btn-default" %>
<%= form_tag({controller: "contacts", action: "destroy_selected"}, method: "delete") do %>
  <%= button_to 'Delete', contacts_path, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Select</th>
        <th>Name</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= check_box_tag("selected_contact_id_#{contact.id}") %></td>
          <td><%= contact.name %></td>
          <td><%= contact.phone_number %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
