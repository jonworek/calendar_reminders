<h1>Contacts</h1>

<%= link_to 'New Contact', new_contact_path, class: "pull-right btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.phone_number %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', contact, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

