<h1>Upcoming Appointments</h1>
<%= link_to "New Appointment", new_appointment_path, { class: "btn btn-default pull-right" } %>
<table class="table table-striped table-bordered">
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Client</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @appointments.each do |apt| %>
    <tr>
      <td><%= apt.start.localtime %></td>
      <td><%= apt.end.localtime %></td>
      <td><%= apt.contact.name %></td>
      <td><%= button_to "Message", 
        { controller: "messages", :action => :create, :method => :post, appointment_id: apt.id, contact_id: apt.contact.id }, 
        class: "btn btn-default" %></td>
      <td><%= link_to "Edit", edit_appointment_path(apt.id), :method => :get, class: "btn btn-default" %></td>
      <td><%= button_to "Delete", appointment_path(apt.id), :method => :delete, 
        confirm: "Are you sure you wish to delete this appointment?", 
        class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
