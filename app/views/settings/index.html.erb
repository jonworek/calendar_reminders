<h1>User settings</h1>
<% @settings.each do |setting| %>
  <%= form_for(setting, remote: true) do |f| %>
    <div class="form-group" >
      <div class="col-md-12">
        <%= f.label setting.key %>
        <%= f.text_field :value, class: "form-control" %>
        <% unless setting.units.nil? %>
          <%= select_tag("#{setting.key}_units", 
            options_for_select(Setting::UNITS.keys, setting.units.to_sym), class: "form-control") %>
        <% end %>
      </div>
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
